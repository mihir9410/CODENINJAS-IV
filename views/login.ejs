<body>
  <div class="login-box">
    <h2>Login</h2>
    <form action="/login" method="post">
      <div class="user-box">
        <input type="text" name="username" required>
        <label>Username</label>
      </div>
      <div class="user-box">
        <input type="password" name="password" required>
        <label>Password</label>
      </div>
      <input type="submit" class="sub">
      
    </form>
  </div>
</body>

